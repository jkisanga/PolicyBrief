<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_container_data"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp" >

    <ImageView
        android:adjustViewBounds="true"
        android:id="@+id/data_thumbunail"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="4dp">
    </ImageView>

    <TextView
        android:layout_margin="4dp"
        android:id="@+id/txt_title_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/data_thumbunail"
        android:padding="1dp"
        android:textSize="14dp"
        android:text="Title"
        android:maxLines="2"
        android:textStyle="bold" />

    <TextView
        android:layout_margin="4dp"
        android:id="@+id/txt_summary_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_title_data"
        android:layout_toRightOf="@id/data_thumbunail"
        android:padding="1dp" />

</RelativeLayout>








