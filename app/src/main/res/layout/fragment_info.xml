<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_messages"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="60dp">

    <LinearLayout
        android:layout_margin="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_document"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/circle_shape"
            android:drawableTop="@drawable/document"
            android:paddingTop="20dp"
            android:text="Documents"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btn_statistic"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/circle_shape"
            android:drawableTop="@drawable/data"
            android:paddingTop="20dp"
            android:text="Data"
            android:textColor="#fff" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_audio"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/circle_shape"
            android:drawableTop="@drawable/audio"
            android:paddingTop="20dp"
            android:text="Audio"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btn_video"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/circle_shape"
            android:drawableTop="@drawable/video"
            android:paddingTop="20dp"
            android:text="Videos"
            android:textColor="#fff" />
    </LinearLayout>
</LinearLayout>